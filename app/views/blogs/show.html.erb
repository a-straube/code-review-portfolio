<div class="col-md-7">
  <h1><%= @blog.title %></h1>

  <h5><i><%= @blog.created_at %></i></h5>
  <hr>
  <h4><%= @blog.entry %></h4>
</div>

<div class="col-md-5">
  <br>
  <h2>Comments</h2>
    <% if @blog.comments.any? %>
      <ul>
        <% @blog.comments.each do |comment| %>
          <hr>
          <li><%= comment.comment %>
            <p><%= link_to "Edit", edit_blog_comment_path(@blog, comment) %> |
                <%= link_to "Delete", blog_comment_path(@blog, comment),
                  :data => {:confirm => "Are you sure you want to delete this comment?",
                  :method => "delete"} %>
            </p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <h4>There are no comments for this blog entry yet!</h4>
    <% end %>
  <%= link_to "Add a comment", new_blog_comment_path(@blog) %>
</div>
